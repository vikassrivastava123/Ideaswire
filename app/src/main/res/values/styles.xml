<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="customBackgroundAttributeColor">@color/skyBlueBckgrnd</item>

    </style>

    <style name="AppTheme.Orange" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryOrange</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkOrange</item>
        <item name="colorAccent">@color/colorAccentOrange</item>
        <item name="customBackgroundAttributeColor">@color/colorPrimaryOrange</item>

    </style>

    <style name="AppTheme.Green" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreen</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
        <item name="customBackgroundAttributeColor">@color/colorPrimaryGreen</item>

    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="AppTheme.NoActionBar">

        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorHint">@color/cardHint</item>
    </style>

    <style name="AppTheme.TitleCustomBar">
        <item name="windowActionBar">true</item>
        <item name="android:background">@color/primary</item>
        <item name="android:textColorHint">@color/primary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/primary</item>
        <item name="android:bottomDark">@color/primary</item>
        <item name="android:bottomMedium">@color/primary</item>
        <item name="android:centerBright">@color/primary</item>
        <item name="android:centerDark">@color/primary</item>
        <item name="android:centerMedium">@color/primary</item>
        <item name="android:fullBright">@color/primary</item>
        <item name="android:fullDark">@color/primary</item>
        <item name="android:topBright">@color/primary</item>
        <item name="android:topDark">@color/primary</item>
        <item name="android:windowBackground">@color/primary</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="AppTheme_Dark_Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>

    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->


        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/textHintOnWhite</item>

    </style>


</resources>
