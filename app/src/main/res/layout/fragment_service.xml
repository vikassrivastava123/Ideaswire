<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:maxLength="30"
        android:id="@+id/Service_TITLE"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColor="@color/card"
        android:gravity="center"
        android:hint="@string/titleHint"
        android:maxLines="1"
        android:textSize="20sp"
        android:textColorHint = "@color/cardHint"
        android:background="?customBackgroundAttributeColor" />



    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Service_TITLE"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout">

            <EditText
                android:gravity="center"
                android:layout_marginTop="14dp"
                android:background="@color/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:hint="@string/headingHint"
                android:textColor="@color/text"
                android:textColorHint="@color/textHintOnWhite"
                android:id="@+id/service_heading"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/deleteHeadingService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@null" />

            <EditText
                android:background="@color/card"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="@string/subHeadingHint"
                android:textColor="@color/text"
                android:textColorHint="@color/textHintOnWhite"
                android:textSize="16sp"
                android:layout_marginTop="14dp"
                android:id="@+id/service_subheading"
                android:layout_below="@+id/service_heading"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/deleteSubHeadingService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_"
                android:layout_below="@+id/service_heading"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@null" />

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:textColor="@color/textWith_56p_opacity"
                android:textColorHint="@color/textHintOnWhite"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="@string/paragraphHint"
                android:gravity="center"
                android:textSize="14sp"
                android:textAlignment="center"
                android:id="@+id/service_para"
                android:layout_below="@+id/service_subheading"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/deleteParaService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_"
                android:layout_below="@+id/service_subheading"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@null" />



            <RelativeLayout
                android:layout_below="@+id/service_para"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cardImageLayout"
                android:padding="10dp">

                <com.android.volley.toolbox.NetworkImageView
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/Service_CARD_IMAGE"
                    android:background="@drawable/image_loader"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:id="@+id/Service_STATIC_IMAGE"
                    android:scaleType="centerCrop" />

                <ProgressBar
                    android:visibility="gone"
                    android:id="@+id/progressBar_service"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />

                <ImageView
                    android:id="@+id/deleteCardService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/close"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@null" />
            </RelativeLayout>

            <EditText
                android:maxLength="30"
                android:gravity="center"
                android:background="@color/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="@string/headingHint"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/text"
                android:textColorHint="@color/textHintOnWhite"
                android:id="@+id/service_heading_belowimg"
                android:layout_below="@+id/cardImageLayout"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/deleteHeadingBlowingService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_"
                android:layout_below="@+id/cardImageLayout"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@null" />

            <EditText
                android:gravity="center"
                android:background="@color/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="@string/subHeadingHint"
                android:textSize="16sp"
                android:textColor="@color/text"
                android:textColorHint="@color/textHintOnWhite"
                android:id="@+id/service_subheading_belowimg"
                android:layout_below="@+id/service_heading_belowimg"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/deleteSubHeadingBlowingService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_"
                android:layout_below="@+id/service_heading_belowimg"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@null" />

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:background="@color/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="@string/paragraphHint"
                android:textSize="14sp"
                android:textColor="@color/textWith_56p_opacity"
                android:textColorHint="@color/textHintOnWhite"
                android:textAlignment="center"
                android:id="@+id/service_para_belowing"
                android:layout_below="@+id/service_subheading_belowimg"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/deleteParaBlowingService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_"
                android:layout_below="@+id/service_subheading_belowimg"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@null" />

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>