<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/listFirstLogin"
    android:paddingTop="-1dp"
    android:background="@drawable/login_reg_bg"
    tools:context="com.fourway.ideaswire.ui.HomepageBeforeLogin">
    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer=""
        >
        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="match_parent"

            android:orientation="vertical">
            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="#161e3e"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    android:clickable="true"
                    android:contextClickable="true"

                    android:visibility="visible">
                    <ImageButton
                        android:id="@+id/nave_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@drawable/more_vert"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:id="@+id/toolbar_title"
                        android:textSize="18dp"
                        android:textColor="#FFFFFF"/>

                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.AppBarLayout>





        </LinearLayout>




        <include layout="@layout/content_homepage_before_login" />



        <!--include
            layout="@layout/app_bar_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay"/-->

        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="25dp"
            android:fitsSystemWindows="false"
            app:itemTextAppearance="@style/NavigationDrawerStyle"
            app:headerLayout="@layout/nav_header"
            app:menu="@menu/activity_main_drawer"
            />


    </android.support.v4.widget.DrawerLayout>



</android.support.design.widget.CoordinatorLayout>
