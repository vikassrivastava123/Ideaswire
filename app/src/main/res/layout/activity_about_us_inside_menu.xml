<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.fourway.ideaswire.ui.about_us_inside_menu">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#000000"
            app:popupTheme="@style/AppTheme.PopupOverlay"

            android:clickable="true"
            android:contextClickable="true"
            app:navigationIcon="@drawable/back_1"
            android:visibility="visible">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:id="@+id/toolbar_title"
                android:textSize="18dp"
                android:textColor="#FFFFFF"/>
            <Button
                android:paddingTop="30dp"
                android:layout_width="15dp"
                android:layout_height="30dp"



                android:layout_alignParentRight="true"
                android:background="@drawable/toolbar"

                android:layout_gravity="right"

                />
            <Button
                android:paddingTop="30dp"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:id="@+id/showevents"

                android:layout_alignParentRight="true"
                android:background="@drawable/preview_about"

                android:layout_gravity="right"

                />
            <Button
                android:paddingTop="30dp"
                android:layout_width="30dp"
                android:layout_height="30dp"



                android:layout_alignParentRight="true"
                android:background="@drawable/toolbar"

                android:layout_gravity="right"

                />
            <Button

                android:paddingLeft="10dp"
                android:drawablePadding="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:id="@+id/showevents2"

                android:layout_alignParentRight="true"
                android:background="@drawable/theme"

                android:layout_gravity="right"

                />
            <Button
                android:paddingTop="30dp"
                android:layout_width="30dp"
                android:layout_height="30dp"



                android:layout_alignParentRight="true"
                android:background="@drawable/toolbar"

                android:layout_gravity="right"

                />
            <Button

                android:paddingLeft="10dp"
                android:drawablePadding="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:id="@+id/showevents3"

                android:layout_alignParentRight="true"
                android:background="@drawable/pages"

                android:layout_gravity="right"

                />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_about_us_inside_menu" />
</android.support.design.widget.CoordinatorLayout>
