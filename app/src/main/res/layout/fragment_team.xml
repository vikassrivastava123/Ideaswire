<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:maxLength="30"
        android:id="@+id/Team_TITLE"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColor="@color/card"
        android:gravity="center"
        android:hint="@string/titleHint"
        android:textSize="20sp"
        android:maxLines="1"
        android:textColorHint = "@color/cardHint"
        android:background="?customBackgroundAttributeColor"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Team_TITLE"
        android:focusable="true"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/relativeLayout">

            <EditText
                android:gravity="center"
                android:layout_marginTop="14dp"
                android:background="@color/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:textColorHint="@color/textHintOnWhite"
                android:hint="@string/headingHint"
                android:id="@+id/HeadingTeam"
                android:layout_centerHorizontal="true" />
            <ImageView
                android:id="@+id/deleteHeadingTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_"
                android:layout_below="@+id/txtEdit"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@null" />

            <EditText
                android:gravity="center"
                android:background="@color/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:textSize="16sp"
                android:textColor="@color/text"
                android:textColorHint="@color/textHintOnWhite"
                android:hint="@string/subHeadingHint"
                android:id="@+id/SubHeadingTeam"
                android:layout_below="@+id/HeadingTeam"
                android:layout_centerHorizontal="true" />
            <ImageView
                android:id="@+id/deleteSubHeadingTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_"
                android:layout_below="@+id/HeadingTeam"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@null" />

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="fonts/Montserrat-SemiBold.otf"
                android:textAlignment="center"
                android:layout_marginTop="14dp"
                android:textSize="14sp"
                android:textColor="@color/textWith_56p_opacity"
                android:textColorHint="@color/textHintOnWhite"
                android:hint="@string/paragraphHint"
                android:id="@+id/paraGraphTeam"
                android:layout_below="@+id/SubHeadingTeam"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/deleteParaGraphTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_"
                android:layout_below="@+id/SubHeadingTeam"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@null" />
            <GridView
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_below="@id/paraGraphTeam"
                android:layout_marginTop="14dp"
                android:drawSelectorOnTop="true"
                android:gravity="center"
                android:numColumns="2"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:layout_centerInParent="true"
                android:clickable="true"/>

            <ProgressBar
                android:visibility="gone"
                android:layout_marginTop="60dp"
                android:layout_below="@id/paraGraphTeam"
                android:id="@+id/progressBar_team"
                android:layout_width="match_parent"
                android:layout_height="130dp" />

        </RelativeLayout>
    </ScrollView>




</RelativeLayout>