<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText android:id="@+id/Contact_TITLE"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColor="@color/card"
        android:gravity="center"
        android:hint="Enter Title"
        android:singleLine="true"
        android:textColorHint = "@color/cardHint"
        android:background="@color/skyBlueBckgrnd"
        android:onClick="changeTitleTextAbtUs" />

    <ImageView
        android:id="@+id/deleteTitleContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_"
        android:layout_below="@+id/txtEdit"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@null" />


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Contact_TITLE"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/relativeLayout">

            <EditText
                android:layout_marginTop="14dp"
                android:background="@color/card"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/text"
                android:text="Heading"
                android:id="@+id/contactHeading"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/deleteHeadingContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_"
                android:layout_below="@+id/txtEdit"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@null" />

            <EditText
                android:background="@color/card"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:textSize="16sp"
                android:textColor="@color/text"
                android:text="This is some random some heading"
                android:id="@+id/contactSubHeading"
                android:layout_below="@+id/contactHeading"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/deleteSubHeadingContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_"
                android:layout_below="@+id/contactHeading"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@null" />




            <EditText
                android:background="@color/card"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="This is some random para dont read it .please it is a dummy text"
                android:textSize="14sp"
                android:textAlignment="center"
                android:id="@+id/contactParaGraph"
                android:layout_below="@+id/contactSubHeading"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/deleteParaGraphContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_"
                android:layout_below="@+id/contactSubHeading"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@null" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:textSize="20dp"
                android:text="Address"
                android:id="@+id/textView13"
                android:layout_below="@+id/contactParaGraph"
                android:layout_centerHorizontal="true" />

            <EditText
                android:background="@color/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Address line one ,address line 2 address line3"
                android:textAlignment="center"
                android:id="@+id/textView14"
                android:layout_below="@+id/textView13"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"/>
            <ImageView
                android:id="@+id/deleteAddressContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_"
                android:layout_below="@+id/textView13"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Email"
                android:textSize="20dp"
                android:id="@+id/textView15"
                android:layout_below="@+id/textView14"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_marginTop="10dp"
                android:background="@color/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Email Address"
                android:id="@+id/textView16"
                android:layout_below="@+id/textView15"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/deleteEmailContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_"
                android:layout_below="@+id/textView15"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Phone Number"
                android:id="@+id/textView17"
                android:layout_below="@+id/textView16"
                android:layout_centerHorizontal="true" />

            <EditText
                android:background="@color/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:text="011-45526119"
                android:id="@+id/textView18"
                android:layout_below="@+id/textView17"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/deletePhoneContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_"
                android:layout_below="@+id/textView17"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@null" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:text="Web Site"
                android:id="@+id/textView19"
                android:layout_below="@+id/textView18"
                android:layout_centerHorizontal="true" />
            <EditText
                android:background="@color/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:text="www.ideaswire.com"
                android:id="@+id/textView20"
                android:layout_below="@+id/textView19"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/deleteWebContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_"
                android:layout_below="@+id/textView19"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@null" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>